<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar_white"></include>
    <include layout="@layout/line_grey"></include>
    <LinearLayout
        android:padding="@dimen/x8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="货品金额"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            ></View>
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="货品金额"
            />

    </LinearLayout>


    <LinearLayout
        android:padding="@dimen/x8"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="运费（元）"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            ></View>
        <EditText
            android:gravity="right"
            android:id="@+id/et_freight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="点击输入运费金额"
            android:background="@null"
            />

    </LinearLayout>



    <LinearLayout
        android:padding="@dimen/x8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="优惠（元）"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            ></View>
        <TextView
            android:id="@+id/tv_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"/>
        <EditText
            android:id="@+id/et_cheapen"
            android:gravity="right"
            android:maxLength="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:textSize="@dimen/x14"
            android:hint="点击输入优惠金额"
            android:background="@null"
            />

    </LinearLayout>

    <LinearLayout
        android:padding="@dimen/x8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="优惠比例"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            ></View>
        <EditText
            android:gravity="right"
            android:id="@+id/et_cheapen_off_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="点击输入优惠金额"
            android:textSize="@dimen/x14"
            android:maxLength="7"
            android:inputType="numberDecimal"
            android:background="@null"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_xn_fee_rate"
        android:text="平台费用（1%）： 5.0元"
        android:padding="@dimen/x8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="完成（合计:￥500.00）"
        android:padding="@dimen/x12"
        android:textColor="@color/white"
        style="@style/bt_submit"
        android:gravity="center"
        />



</LinearLayout>