<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar_white"></include>

        <TextView
            android:padding="@dimen/x8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="给他看货"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/lv_publish"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x160">


        </android.support.v7.widget.RecyclerView>


    <LinearLayout
        android:padding="@dimen/x8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="价    格" />
        <EditText
            android:id="@+id/et_buyer_intention"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLength="7"
            android:inputType="numberDecimal"
            android:gravity="right"
            android:hint="买家意向：30"
            />

        <TextView
            android:id="@+id/unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元/斤"
            android:textColor="@color/primaryGreen"
            />

    </LinearLayout>

    <include layout="@layout/line_grey"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x8"></include>
    <LinearLayout
        android:padding="@dimen/x8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="供应量"
            />
        <EditText
            android:id="@+id/et_buyer_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:maxLength="7"
            android:inputType="number"
            android:hint="买家需求：50"
            />

        <TextView
            android:id="@+id/tv_price_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="斤"
            android:textColor="@color/primaryGreen"
            />

    </LinearLayout>

    <include layout="@layout/line_grey"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x8"></include>


    <LinearLayout
        android:padding="@dimen/x8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="货品所在地"
            />
        <TextView
            android:id="@+id/tv_goods_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="河北省张家口市>"
            />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/x8"
        android:background="@color/hint_text_color"
        android:text="说明"
        />

    <EditText
        android:id="@+id/et_supply_product"
        android:layout_width="match_parent"
        android:padding="@dimen/x8"
        android:layout_height="@dimen/x100"
        android:hint="@string/supply_product_desc"
        />


    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="提交报价"
        android:layout_margin="@dimen/x8"
        android:padding="@dimen/x8"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@color/btn_supplydetail_orange"
        />
</LinearLayout></ScrollView>