<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_auction_detail_state"
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="状态"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/item_auction_detail_product_name"
        android:layout_width="0dp"
        android:layout_weight="2.5"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="货物品名"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/item_auction_detail_origin"
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="产地"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/item_auction_detail_total_unit"
        android:layout_width="0dp"
        android:layout_weight="2.5"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="总重量"
        android:ellipsize="end"
        android:gravity="center"
        />

</LinearLayout>