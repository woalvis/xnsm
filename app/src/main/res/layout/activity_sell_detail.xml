<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pro.sell.view.SellDetailActivity">

    <include layout="@layout/toolbar_white"></include>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x15"
            android:layout_width="@dimen/x70"
            android:layout_height="@dimen/x70"
            android:background="#00000000"
            android:scaleType="centerCrop"
            fresco:roundAsCircle = "true"
            app:placeholderImage="@mipmap/avatar_img"
            android:id="@+id/im_head" />
        <LinearLayout
            android:padding="@dimen/x6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_buyer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="马江涛"
                android:padding="@dimen/x6"
                android:textColor="@color/text_dark" />

            <TextView
                android:id="@+id/tv_buyer_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/x6"
                android:text="河南洛阳市洛宁县" />


        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x16"
        android:background="@color/page_bg_color">

    </View>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x320">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/sell_detail_text"
                android:text="@string/to_goods_category"
                />

            <TextView
                android:id="@+id/goods_category"
                style="@style/sell_detail_text_comment"
                android:text="" />
        </LinearLayout>


        <include layout="@layout/line_grey"></include>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/sell_detail_text"
                android:text="@string/to_goods_num"
                />

            <TextView
                android:id="@+id/goods_num"
                style="@style/sell_detail_text_comment"
                android:text="" />
        </LinearLayout>

        <include layout="@layout/line_grey"></include>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/sell_detail_text"
                android:text="@string/to_goods_origin"
                />

            <TextView
                android:id="@+id/goods_origin"
                style="@style/sell_detail_text_comment" />
        </LinearLayout>
        <include layout="@layout/line_grey"></include>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/sell_detail_text"
                android:text="@string/to_goods_time"
                />

            <TextView
                android:id="@+id/goods_time"
                style="@style/sell_detail_text_comment"
                android:text="" />
        </LinearLayout>
        <include layout="@layout/line_grey"></include>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/sell_detail_text"
                android:text="@string/to_goods_expect_price"
                />

            <TextView
                android:id="@+id/goods_expect_price"
                style="@style/sell_detail_text_comment"
                android:textColor="@color/color_orange"
                android:text="" />
        </LinearLayout>
        <include layout="@layout/line_grey"></include>


        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/sell_detail_text"
                android:text="@string/to_goods_free_shipping"
                />

            <TextView
                android:id="@+id/goods_free_shipping"
                style="@style/sell_detail_text_comment"
                android:text="" />
        </LinearLayout>
        <include layout="@layout/line_grey"></include>


        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/sell_detail_text"
                android:text="@string/to_goods_quality_requirement"
                />

            <TextView
                android:id="@+id/goods_quality_requirement"
                style="@style/sell_detail_text_comment"
                android:text="" />
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/line_grey"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></LinearLayout>

    <TextView
        android:id="@+id/confirm_offer"
        android:layout_margin="@dimen/x6"
        android:gravity="center"
        android:background="@drawable/button_shape_orange"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x32"
        android:text="@string/confirm_price"/>

</LinearLayout>