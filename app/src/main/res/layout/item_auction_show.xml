<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/auction_detail_show"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">



        <tech.xinong.xnsm.views.SquareImageView
            android:id="@+id/auction_show_im_"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:src="@mipmap/default_pic_bg"
            android:layout_weight="1.4"/>

        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/auction_show_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:padding="5dp"
                android:text="苹果"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:text="700吨"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/auction_show_product_unit" />
                <TextView
                    android:id="@+id/auction_show_bid_times"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="出价 3"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="当前价："/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/auction_show_product_current_price"
                    android:padding="5dp"
                    android:text="150000元"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/auction_show_product_start_date"
                android:padding="5dp"
                android:text="2017年1月4日开始"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/auction_show_product_end_date"
                android:padding="5dp"
                android:text="2017年10月4日结束"
                />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <!--<TextView-->
        <!--android:text="已投"-->
        <!--android:gravity="center"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="19dp"-->
        <!--android:background="#ff0000"-->
        <!--android:rotation="45"-->
        <!--/>-->

</FrameLayout>
