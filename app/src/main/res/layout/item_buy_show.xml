<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product_show_layout"
    android:padding="@dimen/x8"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="山鸡"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_marginTop="@dimen/x4"
        android:id="@+id/tv_product_spec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_product_name"
        android:text="七彩山鸡" />

    <TextView
        android:layout_marginTop="@dimen/x4"
        android:id="@+id/tv_product_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_product_spec"
        android:text="所在地：河南平顶山" />

    <com.zhy.view.flowlayout.TagFlowLayout
        android:layout_below="@id/tv_product_address"
        android:id="@+id/fl_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.zhy.view.flowlayout.TagFlowLayout>

    <TextView
        android:id="@+id/period"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_offer"
        android:layout_alignBottom="@+id/tv_offer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="每周" />

    <TextView
        android:id="@+id/help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/period"
        android:layout_alignBottom="@+id/period"
        android:layout_toEndOf="@+id/tv_product_spec"
        android:layout_toRightOf="@+id/tv_product_spec"
        android:text="距截止日还有6天" />

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="10斤" />

    <TextView
        android:id="@+id/tv_offer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/fl_tag"
        android:background="@drawable/tag_bg_orange"
        android:textColor="@color/white"
        android:paddingTop="@dimen/x8"
        android:paddingBottom="@dimen/x8"
        android:paddingLeft="@dimen/x12"
        android:paddingRight="@dimen/x12"
        android:text="去供货" />


</RelativeLayout>