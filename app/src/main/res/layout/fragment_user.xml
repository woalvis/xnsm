<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/page_bg_color"
              android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:background="@color/colorPrimary">


        <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:id="@+id/user_name" />

        <TextView
            android:visibility="gone"
            android:text="@string/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:id="@+id/user_login" />

        <TextView
            android:visibility="gone"
            android:text="@string/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_register"
            android:layout_below="@+id/user_login"
            android:layout_alignLeft="@+id/user_login"
            android:layout_alignStart="@+id/user_login"
            android:layout_marginTop="11dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/avatar_img"
            android:id="@+id/imageView"
            android:layout_marginTop="16dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

    <LinearLayout
        android:id="@+id/user_my_order_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="8dp"
        >

        <TextView
            android:paddingLeft="20dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/my_orders"
            android:textSize="16sp"
            android:layout_weight="1"
            android:textColor="#000000"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/arrow_right_more"
            android:layout_marginRight="10dp"/>

    </LinearLayout>

        <LinearLayout
            android:id="@+id/user_my_address_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding ="8dp"
            >

            <TextView
                android:paddingLeft="20dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/my_delivery_address"
                android:textSize="16sp"
                android:layout_weight="1"
                android:textColor="#000000"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/arrow_right_more"
                android:layout_marginRight="10dp"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="8dp"
            >

            <TextView
                android:paddingLeft="20dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/help_center"
                android:textSize="16sp"
                android:layout_weight="1"
                android:textColor="#000000"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/arrow_right_more"
                android:layout_marginRight="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding ="8dp"
            >

            <TextView
                android:paddingLeft="20dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/csh"
                android:textSize="16sp"
                android:layout_weight="1"
                android:textColor="#000000"
                />

            <TextView
                android:paddingLeft="50dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/csh_number"
                android:textSize="16sp"
                android:layout_weight="1"
                android:textColor="@android:color/holo_blue_dark"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/arrow_right_more"
                android:layout_marginRight="10dp"/>

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding ="8dp"
            >

            <TextView
                android:paddingLeft="20dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/about"
                android:textSize="16sp"
                android:layout_weight="1"
                android:textColor="#000000"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/arrow_right_more"
                android:layout_marginRight="10dp"/>

        </LinearLayout>

    </LinearLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:background="@color/white"
    android:layout_weight="1">

    <TextView
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_margin="15dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:text="@string/logout"
        android:textColor="@color/logout_text_color"
        android:textSize="20sp"
        android:background="@drawable/login_bg_pressed"/>


</RelativeLayout>
</LinearLayout>